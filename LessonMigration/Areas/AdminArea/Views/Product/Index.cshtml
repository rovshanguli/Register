@model Paginate<ProductListVM>
@{
    ViewData["Title"] = "Products";
    int count = ((Model.CurrentPage - 1) * 10) + 1;
}


<div class="container">
    <div class="row">
        <div class="header d-flex justify-content-between mt-3">
            <h3>Products</h3>
            <div>
                <a class="btn btn-success" asp-action="Create">Create</a>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            Number
                        </th>
                        <th>
                            Image
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Category
                        </th>
                        <th>
                            Price
                        </th>
                        <th>
                            Count
                        </th>
                        <th>
                            Settings
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model.Datas)
                    {
                        <tr>
                            <td>
                                @count
                            </td>
                            <td>
                                <img src="~/img/@product.Image" style="width:150px;height:150px" alt="product" />
                            </td>
                            <td>
                                @product.Name
                            </td>
                            <td>
                                @product.CategoryName
                            </td>
                            <td>
                                @product.Price
                            </td>
                            <td>
                                @product.Count
                            </td>
                            <td>
                                <a class="btn btn-primary btn-sm" asp-action="Detail" asp-route-id="@product.Id">
                                    <i class="mdi mdi-account-box-outline"></i>
                                </a>
                                <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@product.Id">
                                    <i class="mdi mdi-table-edit"></i>
                                </a>
                                <form style="display:inline-block" method="post" asp-action="Delete" asp-route-id="@product.Id">
                                    <button class="btn btn-danger btn-sm" type="submit">
                                        <i class="mdi mdi-delete-forever"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                        count++;
                    }

                </tbody>
            </table>
        </div>
    </div>

    <div class="row my-3">
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.HasPrevious ? "": "disabled")">
                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage-1)">Previous</a>
                </li>
                @for (int i = 1; i <= Model.TotalPage; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "disabled" : "")">
                        <a class="page-link"  asp-action="Index" asp-route-page="@i">@i</a>
                    </li>
                }

                <li class="page-item @(Model.HasNext ? "": "disabled")">
                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage+1)">Next</a>
                </li>
            </ul>
        </nav>
    </div>
</div>

